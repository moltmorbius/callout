{
  "name": "callout",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -At run build",
    "build:shared": "yarn workspace @callout/shared build",
    "build:ui": "yarn workspace @callout/ui build",
    "build:api": "yarn workspace @callout/api build",
    "build:cli": "yarn workspace @callout/cli build",
    "dev": "yarn workspace @callout/ui dev",
    "dev:api": "yarn workspace @callout/api dev",
    "dev:all": "concurrently \"yarn dev\" \"yarn dev:api\"",
    "dev:cli": "yarn workspace @callout/cli dev",
    "lint": "eslint .",
    "test": "yarn workspaces foreach -At run test",
    "test:watch": "yarn workspaces foreach -Ait run test:watch",
    "test:coverage": "yarn workspaces foreach -At run test:coverage"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "~5.9.3"
  },
  "packageManager": "yarn@4.12.0+sha512.f45ab632439a67f8bc759bf32ead036a1f413287b9042726b7cc4818b7b49e14e9423ba49b18f9e06ea4941c1ad062385b1d8760a8d5091a1a31e5f6219afca8"
}
